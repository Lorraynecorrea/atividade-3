programa {
  funcao inicio() {
   inteiro numero
   escreva("Digite um número entre 1 e 7:") 
   leia(numero)  

   se(numero==1) escreva ("domingo")
   se(numero==2) escreva ("segunda-feira")
   se(numero==3) escreva ("terça-feira")
   se(numero==4) escreva ("quarta-feira")
   se(numero==5) escreva ("quinta-feira")
   se(numero==6) escreva ("sexta-feira")
   se(numero==7) ecreva ("sábado")

  }
}
